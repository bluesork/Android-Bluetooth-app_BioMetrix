<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_biomx_capture_settings_sensors"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:padding="5dp" >

    <com.biomx.android.client.widget.XCheckBox
        android:id="@+id/text_view_list_file_chooser"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp" />

    <com.biomx.android.client.widget.XTextView
        android:id="@+id/text_view_list_file_name"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/text_view_list_file_chooser"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/text_view_list_file_chooser"
        android:text=""
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>